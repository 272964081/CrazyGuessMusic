        <!-- top bar -->

        <include layout="@layout/top_bar" />
        <!-- 盘片 -->

        <include layout="@layout/pan_layout" />
        <!-- 文字选择区域 -->

        <include layout="@layout/name_selecter" />
    </LinearLayout>

</FrameLayout>